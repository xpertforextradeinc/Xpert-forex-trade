# WordPress Configuration
# Copy this file to .env and fill in your values
# NEVER commit the .env file with actual credentials

# ============================================================
# DATABASE SETTINGS
# ============================================================
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_CHARSET=utf8mb4
DB_COLLATE=
DB_TABLE_PREFIX=wp_

# ============================================================
# WORDPRESS SECURITY KEYS AND SALTS
# Generate new keys at: https://api.wordpress.org/secret-key/1.1/salt/
# ============================================================
AUTH_KEY=your-unique-phrase-here
SECURE_AUTH_KEY=your-unique-phrase-here
LOGGED_IN_KEY=your-unique-phrase-here
NONCE_KEY=your-unique-phrase-here
AUTH_SALT=your-unique-phrase-here
SECURE_AUTH_SALT=your-unique-phrase-here
LOGGED_IN_SALT=your-unique-phrase-here
NONCE_SALT=your-unique-phrase-here

# ============================================================
# THIRD-PARTY API KEYS
# ============================================================

# Pinterest API
PINTEREST_API_KEY=your_pinterest_api_key

# Paystack Payment Gateway
PAYSTACK_PUBLIC_KEY=your_paystack_public_key
PAYSTACK_SECRET_KEY=your_paystack_secret_key

# Exness Trading Platform
EXNESS_API_KEY=your_exness_api_key
EXNESS_API_SECRET=your_exness_api_secret

# ============================================================
# WORDPRESS DEBUG SETTINGS
# ============================================================
WP_DEBUG=false
WP_DEBUG_LOG=false
WP_DEBUG_DISPLAY=false

# ============================================================
# SECURITY SETTINGS
# ============================================================
DISALLOW_FILE_EDIT=true
FORCE_SSL_ADMIN=true
